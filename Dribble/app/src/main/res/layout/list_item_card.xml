<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="2dp"
    app:contentPadding="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >

            <com.my.jerrychan.widgets.CircleImageView
                android:id="@+id/img_author_avatar"
                android:layout_width="40dp"
                android:layout_margin="6dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_imgname"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_author_avatar"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Jerry Chan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_imgname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/img_author_avatar"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Jerry Chan"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#70000000"
                android:gravity="right"
               android:padding="6dp"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_visibility_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:textSize="10dp"
                    android:id="@+id/tv_visibility"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:layout_gravity="center_vertical"

                    android:background="@drawable/ic_comment_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="4dp"
                    android:id="@+id/tv_comment_counts"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="16dp"


                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_like_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:textSize="10dp"
                    android:id="@+id/tv_like_counts"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>