<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="2dp"
    app:contentPadding="0dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <com.my.jerrychan.widgets.CircleImageView
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:id="@+id/author_img"
            android:background="#ffee33"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/tv_authorname"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/font_color_black"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/author_img"
            android:text="Jerry Chan"
            android:singleLine="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_author_description"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/font_color_black"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/author_img"
            android:layout_below="@+id/tv_authorname"
            android:lines="3"
            android:text="Jerry Chan"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>